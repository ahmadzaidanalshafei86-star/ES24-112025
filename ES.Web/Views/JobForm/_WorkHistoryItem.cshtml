@model EmployeeWorkHistory

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    var index = ViewData["Index"];
}

<div class="item-row mb-3 p-3 border rounded" data-index="@index">
    <div class="row">
        <div class="col-md-6">
            <label>@Localizer["Company Name"]</label>
            <input type="text" name="WorkHistory[@index].CompanyName" value="@Model.CompanyName" class="form-control" />
        </div>
        <div class="col-md-6">
            <label>@Localizer["Company Address"]</label>
            <input type="text" name="WorkHistory[@index].CompanyAddress" value="@Model.CompanyAddress" class="form-control" />
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-md-6">
            <label>@Localizer["Position Description"]</label>
            <input type="text" name="WorkHistory[@index].PositionDescription" value="@Model.PositionDescription" class="form-control" />
        </div>
        <div class="col-md-3">
            <label>@Localizer["Start Date"]</label>
            <input type="date" name="WorkHistory[@index].StartDate" value="@Model.StartDate?.ToString("yyyy-MM-dd")" class="form-control" />
        </div>
        <div class="col-md-3">
            <label>@Localizer["End Date"]</label>
            <input type="date" name="WorkHistory[@index].EndDate" value="@Model.EndDate?.ToString("yyyy-MM-dd")" class="form-control" />
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-md-4">
            <label>@Localizer["Direct Manager Name"]</label>
            <input type="text" name="WorkHistory[@index].DirectManagerName" value="@Model.DirectManagerName" class="form-control" />
        </div>
        <div class="col-md-4">
            <label>@Localizer["Last Salary"]</label>
            <input type="number" step="0.01" name="WorkHistory[@index].LastSalary" value="@Model.LastSalary" class="form-control" />
        </div>
        <div class="col-md-4">
            <label>@Localizer["Leave Reason"]</label>
            <input type="text" name="WorkHistory[@index].LeaveReason" value="@Model.LeaveReason" class="form-control" />
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-md-11">
            <label>@Localizer["Main Job Description"]</label>
            <textarea name="WorkHistory[@index].MainJobDescription" class="form-control" rows="2">@Model.MainJobDescription</textarea>
        </div>
        <div class="col-md-1 d-flex align-items-end">
            <button type="button" class="btn btn-danger btn-sm remove-item">
                <i class="fa fa-trash"></i>
            </button>
        </div>
    </div>
</div>