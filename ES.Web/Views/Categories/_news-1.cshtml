    <div class="col-md-8">
        <div class="row">
            @foreach (var item in Model.Pages)
            {

                <div class="col-sm-6">
                    <div class="news-inner">
                        <img src="images/Pages/@item.FeaturedImageUrl"
                             alt="@item.Title" class="img-responsive">
                        <div class="title-1">
                            <i class="far fa-calendar-alt"></i>
                            @{
                                if (item.DateInput.HasValue)
                                {
                                    @item.DateInput.Value.ToString("dd MMM, yyyy")
                                }
                                else
                                {
                                    @Localizer["No Date"]
                                }
                            }
                        </div>
                        <div class="text">@item.Title</div>
                        <div class="more-news-inner"><a href="@item.LinkUrl" class="btn-header btn-more">@Localizer["Read More"]</a></div>
                    </div>
                </div>
