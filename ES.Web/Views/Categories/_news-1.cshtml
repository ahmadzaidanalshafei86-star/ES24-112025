        </div>

       
        <!-- PAGING -->
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Page navigation" class="text-center" style="margin-top: 20px;">
                <ul class="pagination">

                    <!-- First Page -->
                    <li class="@(Model.CurrentPage == 1 ? "disabled" : "")">
                        <a href="@Url.Action("Index", "Categories", new { slug = Model.Slug, page = 1 })" aria-label="First">
                            <span aria-hidden="true">&laquo;&laquo;</span>
                        </a>
                    </li>

                    <!-- Previous Page -->
                    <li class="@(Model.CurrentPage == 1 ? "disabled" : "")">
                        <a href="@Url.Action("Index", "Categories", new { slug = Model.Slug, page = Model.CurrentPage - 1 })" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>

                    <!-- Page Numbers -->
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="@(i == Model.CurrentPage ? "active" : "")">
                            <a href="@Url.Action("Index", "Categories", new { slug = Model.Slug, page = i })">@i</a>
                        </li>
                    }

                    <!-- Next Page -->
                    <li class="@(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                        <a href="@Url.Action("Index", "Categories", new { slug = Model.Slug, page = Model.CurrentPage + 1 })" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>

                    <!-- Last Page -->
                    <li class="@(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                        <a href="@Url.Action("Index", "Categories", new { slug = Model.Slug, page = Model.TotalPages })" aria-label="Last">
                            <span aria-hidden="true">&raquo;&raquo;</span>
                        </a>
                    </li>

                </ul>
            </nav>
        }

    </div>

