    }

    .btn-custom {
        color: #032241;
        background-color: #FFFFFF;
        border-color: #032241;
        transition: 0.3s;
    }
</style>
<style>

    th {
        width: 30%;
        text-align: unset;
    }

    tr:nth-child(even) {
        background-color: #0361af4f;
    }


    p.sign {
        font-family: 'Euphoria Script', cursive;
        text-transform: capitalize;
        font-size: 36px;
        line-height: 36px;
        float: right;
        color: #0674d8;
    }
</style>


<!-- Refrigerators Content -->
<div >
    <div class="">
        @if (Model.Refrigerators != null && Model.Refrigerators.Any())
        {
            <div class="table-responsive">
                <table class="table table-bordered table-striped align-middle Refrigerator" style="width: 100%;">
                    <thead class="custom-header">
                        <tr>
                            <th scope="col">@Localizer["Name"]</th>
                            <th scope="col">@Localizer["Size"]</th>

                            <th scope="col">@Localizer["Type"]</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var t in Model.Refrigerators)
                        {
                            <tr>

                                <td>@t.Name</td>
                                <td>@t.Size</td>
                                <td>@t.Type</td>








                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center">
                @Localizer["No Refrigerators available at the moment."]
            </div>
        }
    </div>
</div>







