@page
@model LoginModel

@using Microsoft.AspNetCore.Mvc.Localization
@using System.Globalization
@inject IViewLocalizer Localizer

@{
    Layout = null;
    bool isRtl = CultureInfo.CurrentCulture.Name.StartsWith("ar");
}

<!DOCTYPE html>
<html lang="@CultureInfo.CurrentCulture.Name" dir="@(isRtl ? "rtl" : "ltr")">
<head>
    <base href="@Url.Content("~/")" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>@Localizer["Login"]</title>

    <!-- Bootstrap -->
    <link href="~/CMS/assets/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Icons -->
    <link href="~/CMS/assets/css/icons.css" rel="stylesheet" />

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">

    <style>
        body {
            min-height: 100vh;
            margin: 0;
            background: url("https://demo2.es.jo/motor-lab-web/images/2.png") no-repeat center center fixed;
            background-size: cover;
            font-family: 'Roboto', sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
        }

            /* Dark overlay */
            body::before {
                content: "";
                position: absolute;
                inset: 0;
                background: rgba(0,0,0,0.55);
                z-index: 0;
            }

        .login-container {
            position: relative;
            z-index: 1;
            width: 100%;
            max-width: 420px;
            background: #ffffff;
            border-radius: 18px;
            padding: 35px;
            box-shadow: 0 30px 60px rgba(0,0,0,0.25);
        }

        .login-logo {
           
            width: 190px;
            height: 115px;
            margin: 0 auto 22px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 12px;
        }


            .login-logo img {
                max-width: 160px;
                height: auto;
            }

        .login-title {
            text-align: center;
            font-weight: 500;
            margin-bottom: 4px;
        }

        .login-subtitle {
            text-align: center;
            color: #777;
            font-size: 14px;
            margin-bottom: 28px;
        }

        .form-label {
            font-size: 14px;
            font-weight: 500;
        }

        .input-group-text {
            background: #f3f3f3;
            border: none;
        }

        .form-control {
            height: 46px;
            border: none;
            background: #f3f3f3;
        }

            .form-control:focus {
                box-shadow: none;
                background: #ffffff;
                border: 1px solid #4e4376;
            }

        .btn-login {
            height: 46px;
            border-radius: 8px;
            background: linear-gradient(135deg, #00308C, #00308C);
            color: #ffffff;
            font-weight: 500;
            border: none;
            transition: 0.3s ease;
        }

            .btn-login:hover {
                opacity: 0.9;
            }

        .form-check-label {
            font-size: 14px;
        }

        .text-danger {
            font-size: 13px;
        }
    </style>
</head>

<body>

    <div class="login-container">

        <div class="login-logo">
            <img src="~/WebSite/images/logo.png" alt="Logo" />
        </div>

        <h4 class="login-title">@Localizer["Login"]</h4>
        <p class="login-subtitle">@Localizer["Login to your account"]</p>

        <form method="post">

            <!-- Username -->
            <div class="mb-3">
                <label asp-for="Input.Username" class="form-label">
                    @Localizer["Username"]
                </label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bx bx-user"></i>
                    </span>
                    <input asp-for="Input.Username"
                           class="form-control"
                           placeholder="@Localizer["Your user name"]" />
                </div>
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>

            <!-- Password -->
            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label">
                    @Localizer["Password"]
                </label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bx bx-lock"></i>
                    </span>
                    <input asp-for="Input.Password"
                           type="password"
                           class="form-control"
                           placeholder="@Localizer["Your password"]" />
                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <!-- Remember Me -->
            <div class="mb-3">
                <div class="form-check">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label">
                        @Localizer["Remember Me"]
                    </label>
                </div>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

            <!-- Login Button -->
            <button type="submit" class="btn btn-login w-100">
                @Localizer["Login"]
            </button>

        </form>

    </div>

    <script src="~/CMS/assets/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />

</body>
</html>
